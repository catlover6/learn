#include<iostream>
#include<string>
using namespace std;

	class Car {
		int speed;
		int gear;
		string color;

	public:
		Car(int s = 0, int g = 1, string c = "white") : speed(s), gear(g), color(c){}
		void print() {
			cout << "속도" << speed << "기어 " << gear << "색상 : " << color << endl;
		}
	};

	int main()
	{
		Car myCar;
		myCar.print();

		Car* pCar = new Car(0, 1, "blue");
		pCar[0].print();
		//pCar->print();

		delete pCar;
		return 0;
}
